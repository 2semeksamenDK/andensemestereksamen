---
const { title, text, subtitle } = Astro.props;
---

<article>
  <h3>{title}</h3>
  <p class="text">{text}</p>
  <p class="subtitle">{subtitle}</p>
</article>

<style>
  article {
    border: 2px solid black;
    border-radius: 30px;
    padding: 30px;
    margin: 20px;
  }
  .text {
    font-size: 40px;
  }
  .subtitle {
    background: black;
    color: white;
    padding: 1px 20px;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 700;
    display: inline-block;
    letter-spacing: 2px;
  }
</style>
