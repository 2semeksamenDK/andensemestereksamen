---
const { title, text, subtitle } = Astro.props;
---

<article>
  <h3>{title}</h3>
  <p class="text">{text}</p>
  <p class="subtitle">{subtitle}</p>
</article>

<style>
  article {
    border: 2px solid black;
    border-radius: 30px;
    padding: 30px;
    margin: 20px;
  }

  .text {
    font-size: 100px;
  }

  h3 {
    padding-bottom: 8%;
  }

  h3,
  p {
    font-family: "Amaranth", sans-serif;
    font-weight: 100;
    line-height: 40px;
  }

  .subtitle {
    background: black;
    color: white;
    padding: 1px 40px;
    border-radius: 999px;
    font-size: 0.9rem;
    font-weight: 700;
    display: inline-block;
    letter-spacing: 2px;
    margin-top: 30px;
  }
</style>
