---
import Navigation from "./Navigation.astro";
import BurgerMenu from "./BurgerMenu.astro";

---
<header>
  <img src="imgs/logo.svg" alt="logo" />
  <Navigation />
  <BurgerMenu />
</header>

<style>
  header {
  width: 95%;
  display: flex;
  justify-content: space-between;
  background: white;
  align-items: flex-end; 
  margin-left: 2rem;
}

header img {
  width: auto;
  height: auto;
}

/* Desktop */
@media (min-width: 800px) {
  .burger {
    display: none;
  }
}

/* Mobile */
@media (max-width: 799px) {
  nav.desktop {
    display: none;
  }
}

</style>
