---
const { img, text, title } = Astro.props;
---

<article class="grid-1_1">
  <div>
    <img src={img} />
  </div>
  <div>
    <h3>{title}</h3>
    <p>{text}</p>
  </div>
</article>

<style>
  .grid-1_1 {
    display: grid;
    grid-template-columns: 1fr 7fr;
  }
  img {
    width: 50%;
   
  }


  title {
    font-weight: 20px;
  }

  

</style>
